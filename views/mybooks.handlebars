    <title>My books</title>


</head>

<body>


    <div id='cssmenu'>
        <ul>
            <li class='active'><a href='#'>Search</a></li>
            <li><a href='#'>My Books</a></li>
        </ul>

    </div>

    <div class="container">

        <div class="fav-book-container jumbotron">


            <div class="row">

                <div class="col-lg-4">

                    <div class="card fav-books">
                        <p id="fav-books-title">Favorite Books</p>
                    </div>

                </div>

                <div class="col-lg-8">

                    <div class="card currently-reading">
                        <p id="currently-reading-title">Currently Reading</p>

                        <div id="curr-reading-book">

                            <div id="img-contain">
                                <img class="current-book-img" src="http://via.placeholder.com/360x640">

                            </div>

                            <div class="wrapper">
			<div class="progress-bar">
				<span class="progress-bar-fill" style="width: 33%;"></span>
			</div>

            <p class="page-progress">Page <span id="curr-page-count">100</span> of <span>300</span></p>
		</div>


                            <a data-toggle="modal" data-target="#exampleModalCenter">

 <p id="edit-progress">Edit Progress</p>
                            </a>

                        </div>

                    </div>


                </div>

            </div>
        </div>


    </div>


    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Reading progress</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                   
                    Current page:<br>
                    <input id="current-page"  type="text" name="lastname">
                     Total pages:<br>
                    <input id="total-pages" type="text" name="firstname"><br>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="page-submit" type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


